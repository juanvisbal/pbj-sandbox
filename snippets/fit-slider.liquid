{% liquid
  assign product = product | default: closest.product
-%}

<div class="fit-selector">
  <div class="fit-selector-line"></div>

  {% assign fit_options = "slim,slightly slim,standard,slightly oversized,oversized" | split: "," %}
  {% assign current_fit = product.metafields.custom.fit | downcase %}

  {% for option in fit_options %}
    <div class="fit-selector-item">
      <div class="fit-selector-point {% if option == current_fit %}active{% endif %}"></div>
      {%  current_fit != 2 or current_fit != 4 %}<div class="fit-selector-label">{{ option }}</div>
    </div>
  {% endfor %}
</div>

{% stylesheet %}
  .fit-selector {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 330px;
    margin: 20px 0;
    position: relative;
  }

  .fit-selector-line {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #1e2b6e;
    transform: translateY(-50%);
    z-index: 0;
  }

  .fit-selector-point {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background-color: #1e2b6e;
    position: relative;
    z-index: 1;
  }

  .fit-selector-point.active {
    background-color: white;
    border: 2px solid #1e2b6e;
  }

  .fit-selector-label {
    text-align: center;
    color: #1e2b6e;
    font-size: 14px;
    margin-top: 8px;
  }

  .fit-selector-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
{% endstylesheet %}
